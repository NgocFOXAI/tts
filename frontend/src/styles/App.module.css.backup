.main {
  flex: 1;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* Remove logoContainer as no longer used */

.main.withTabSwitcher {
  margin-top: 95px; /* Ensure content always starts below header */
  min-height: calc(100vh - 95px); /* Prevent content from going behind header */
}

.chatTabSwitcher {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9999; /* Very high z-index to stay on top */
  background: white;
  border-bottom: 2px solid #000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.2rem 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  min-height: 90px; /* Fixed minimum height */
  height: auto; /* Allow height to grow with content */
}

.headerLogo {
  display: flex;
  align-items: center;
  gap: 12px;
}

.logoImage {
  height: 80px;
  width: auto;
}

/* .companyName - removed as no longer used */

.tabContainer {
  display: flex;
  justify-content: center;
  flex: 1;
}

.chatTab {
  background: transparent;
  border: 2px solid #ccc;
  padding: 0.8rem 1.5rem;
  cursor: pointer;
  font-size: 0.9rem;
  font-weight: 600;
  color: #333;
  border-radius: 8px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  margin: 0 0.5rem;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10px);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Card navigation effect - sliding background */
.chatTab::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

.chatTab::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: -1;
}

.chatTab:hover::before {
  left: 100%;
}

.chatTab:hover {
  border-color: #1e5799;
  color: #1e5799;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(30, 87, 153, 0.2);
}

.chatTab.active {
  background: #1e5799;
  color: white;
  border-color: #1e5799;
  transform: translateY(-2px);
  box-shadow: 0 12px 30px rgba(30, 87, 153, 0.3);
  position: relative;
}

.chatTab.active::after {
  transform: scaleX(1);
  background: #1e5799;
}

.chatTab.active:hover {
  color: white;
  background: #1e5799;
  box-shadow: 0 15px 35px rgba(30, 87, 153, 0.4);
}

/* Glowing effect for active tab */
.chatTab.active::before {
  background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.05), transparent);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .chatTabSwitcher {
    padding: 0.75rem 1rem;
    flex-direction: column;
    gap: 1rem;
  }

  .headerLogo {
    justify-content: center;
  }

  .logoImage {
    height: 40px;
  }

  /* .companyName - removed as no longer used */

  .tabContainer {
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .chatTab {
    padding: 0.6rem 1rem;
    margin: 0;
    font-size: 0.8rem;
    flex: 1;
    min-width: 120px;
  }

  .main.withTabSwitcher {
    margin-top: 140px;
  }
}

