}

.healthStatus.unhealthy {
  background: #ef4444;
  color: white;
}

.nav {
  background: white;
  border-bottom: 1px solid #e0e0e0;
}

.navTabs {
  display: flex;
  gap: 0;
}

.navTab {
  background: none;
  border: none;
  padding: 1rem 1.5rem;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 600;
  color: #666;
  border-bottom: 3px solid transparent;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.navTab:hover {
  background: #f9f9f9;
  color: #333;
}

.navTab.active {
  color: #3b82f6;
  border-bottom-color: #3b82f6;
